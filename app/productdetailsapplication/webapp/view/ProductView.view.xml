<mvc:View controllerName="com.productdetailsapplication.productdetailsapplication.controller.ProductView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page>
        <headerContent>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Create" press="onCreateProduct" />
                <Button text="Update" press="onUpdateProduct" />
                <Button text="Delete" press="onDeleteProduct" />
            </Toolbar>
        </headerContent>
        
        <content>
            <IconTabBar>
                <items>
                    <IconTabFilter key="Products" text="PRODUCTS" icon="sap-icon://hint">
                        <Table id="table" items="{/Products}">
                            <columns>
                                <Column>
                                    <Text text="ID" />
                                </Column>
                                <Column>
                                    <Text text="PRODUCT NAME" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Active" press="onSelectProduct">
                                    <cells>
                                        <Text text="{ID}" />
                                        <Text text="{productName}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabFilter key="Characteristics" text="CHARACTERISTICS" icon="sap-icon://hint">
                        <Table id="charTable" items="{/Characteristics}">
                            <columns>
                                <Column>
                                    <Text text="ID" />
                                </Column>
                                <Column>
                                    <Text text="PRODUCT ID" />
                                </Column>
                                <Column>
                                    <Text text="PRODUCT NAME" />
                                </Column>
                                <Column>
                                    <Text text="CHARACTERISTIC NAME" />
                                </Column>
                                <Column>
                                    <Text text="CHARACTERISTIC VALUE" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{ID}" />
                                        <Text text="{product/ID}" />
                                        <Text text="{product/productName}" />
                                        <Text text="{characteristicName}" />
                                        <Text text="{characteristicValue}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
